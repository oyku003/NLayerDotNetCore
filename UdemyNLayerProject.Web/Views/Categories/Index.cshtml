@model IEnumerable<CategoryDto>


<table class="table table-bordered">
    <a class="btn btn-primary mb-1">Kategori Ekle</a>
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a asp-action="Update" asp-route-id="@item.Id">Güncelle</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.Id">Güncelle</a></td>
            </tr>

        }
    </tbody>
</table>

